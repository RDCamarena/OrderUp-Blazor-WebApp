@inject NavigationManager NavigationManager


<div class="card mb-3 border-dark shadow" style="max-width:400px; display:inline-block; margin: 3px">
    <div class="card-body" >
        <h3 >@customer.FirstName @customer.LastName</h3>         
        <button class="btn btn-primary" @onclick="(()=> GoToDetails(customer.Id))">Show Orders</button>

        
    </div>
    <div class="card-footer text-muted">
      Phone Number:@customer.PhoneNumber  |  Email:@customer.Email
    </div>

</div>



@code {
    [Parameter]
    public CustomerDto customer { get; set; }

    void GoToDetails(int id)
    {
        NavigationManager.NavigateTo($"customer/{id}");
    }

}
